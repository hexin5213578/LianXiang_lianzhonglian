<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F7F7F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title" android:id="@+id/include"></include>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/sc"
        android:layout_below="@+id/include"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/confirmorder_bg"
                android:id="@+id/rl_select_address"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="@dimen/dp_69">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:src="@mipmap/order_address"
                    android:id="@+id/iv_havenoaddress"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_height="@dimen/dp_22">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/iv_havenoaddress"
                    android:text="您还没有添加收货地址请先去添加"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    android:id="@+id/tv_havenoaddress"
                    android:textColor="#999999"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:src="@mipmap/order_address"
                    android:id="@+id/iv_haveaddress"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_height="@dimen/dp_22">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_38"
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/tv_name"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/tv_name"
                    android:layout_marginTop="@dimen/dp_17"
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_phone"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="@dimen/dp_38"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#333333"
                    android:id="@+id/tv_address"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/rc_order"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/confirmorder_bg"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/confirmorder_bg"
                android:layout_height="@dimen/dp_120">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#EFEFEF">
                    </View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="运费"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#333333"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#E94942"
                            android:id="@+id/tv_yunfei"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_9"
                            android:text="￥0.00"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#EFEFEF">
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="订单备注"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#333333"
                            android:layout_height="match_parent">
                        </TextView>
                        <EditText
                            android:layout_width="match_parent"
                            android:background="@null"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:text=""
                            android:id="@+id/et_remarks"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_height="@dimen/dp_50">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_20">
            <TextView
                android:layout_width="wrap_content"
                android:text="2种共10件，"
                android:textSize="@dimen/sp_12"
                android:textColor="#B3B3B3"
                android:id="@+id/tv_count"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="合计:"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="￥"
                android:textColor="#E94942"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="1380.00"
                android:textColor="#E94942"
                android:textSize="@dimen/sp_14"
                android:id="@+id/tv_price"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <Button
            android:layout_width="@dimen/dp_96"
            android:text="提交订单"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:id="@+id/bt_confirm"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_gravity="center"
            android:background="@drawable/confirmorder_bt_bg"
            android:layout_height="@dimen/dp_40">
        </Button>
    </LinearLayout>
</RelativeLayout>