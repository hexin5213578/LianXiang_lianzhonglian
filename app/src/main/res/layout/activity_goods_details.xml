<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_good_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360">
    </ImageView>
    <ImageView
        android:layout_width="@dimen/dp_30"
        android:src="@mipmap/back_details"
        android:id="@+id/back"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="@dimen/dp_30">
    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/iv_good_image"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="@dimen/dp_260"
            android:text="农夫山泉 饮用水 饮用天然水普通装550ml*24瓶整箱装"
            android:textColor="#323232"
            android:textSize="@dimen/sp_16"
            android:id="@+id/tv_goods_title"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="¥ 39.90"
            android:id="@+id/tv_goods_money"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@id/tv_goods_title"
            android:layout_marginTop="@dimen/dp_14"
            android:textColor="#E94942"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="¥ 37.90"
            android:id="@+id/tv_goods_yuanjia"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_below="@id/tv_goods_title"
            android:layout_toRightOf="@id/tv_goods_money"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="#999999"
            android:layout_height="wrap_content">
        </TextView>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_below="@id/tv_goods_money">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_goods_yunfei"
                android:text="运费:0.00"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:textColor="#888888"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="月销:256件"
                android:id="@+id/tv_goods_xiaoliang"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:textColor="#888888"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="库存:3625件"
                android:gravity="center"
                android:id="@+id/tv_goods_kucun"
                android:textSize="@dimen/sp_12"
                android:textColor="#888888"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/dp_46">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="加入进货单"
            android:id="@+id/bt_join"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:background="#E94942"
            android:layout_height="match_parent">
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="立即订购"
            android:id="@+id/bt_buy"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:background="#43C6AD"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>
</RelativeLayout>