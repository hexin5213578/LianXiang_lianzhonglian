<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F7F7F7"
    android:layout_height="match_parent"
    tools:context=".login.activity.LoginActivity">
  <ImageView
      android:layout_width="wrap_content"
      android:id="@+id/bg_pwd"
      android:scaleType="fitXY"
      android:layout_height="@dimen/dp_250"
      android:src="@mipmap/login_bg_pwd">
  </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/bg_code"
        android:layout_height="@dimen/dp_250"
        android:visibility="gone"
        android:src="@mipmap/login_bg_code">
    </ImageView>
    <ImageView
        android:layout_width="@dimen/dp_150"
        android:src="@mipmap/logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_height="@dimen/dp_150">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/dp_15"
        android:id="@+id/regist"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_height="wrap_content"
        android:text="注册">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_200">
        <RadioButton
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="密码登录"
            android:gravity="center"
            android:id="@+id/login_pwd"
            android:checked="true"
            android:textColor="#FEFEFE"
            android:textSize="@dimen/sp_18">
        </RadioButton>
        <RadioButton
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="验证码登录"
            android:id="@+id/login_code"
            android:textColor="#FEFEFE"
            android:textSize="@dimen/sp_18">
        </RadioButton>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_250"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/login_bg"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_34"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_pwd"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_25"
                android:id="@+id/ll_username"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@drawable/et_login_bg"
                android:layout_height="@dimen/dp_50">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@mipmap/user">
                </ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:paddingLeft="@dimen/dp_6"
                    android:id="@+id/et_username"
                    android:hint="请输入手机号"
                    android:textSize="@dimen/sp_15"
                    android:textColorHint="#999999"
                    android:layout_height="@dimen/dp_50">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/ll_username"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_25"
                android:id="@+id/ll_pwd"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@drawable/et_login_bg"
                android:layout_height="@dimen/dp_50">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/pwd">
                </ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_pwd"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dp_6"
                    android:textSize="@dimen/sp_15"
                    android:textColorHint="#999999"
                    android:layout_below="@id/ll_username"
                    android:background="@null"
                    android:layout_height="@dimen/dp_50">
                </EditText>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:text="忘记密码？"
                android:textColor="#43C4AB"
                android:textSize="@dimen/sp_14"
                android:layout_below="@+id/ll_pwd"
                android:id="@+id/tv_rememberpwd1"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_28"
                android:layout_height="wrap_content">
            </TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:text="登录"
                android:layout_marginRight="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_31"
                android:id="@+id/bt_login_pwd"
                android:background="@drawable/address_button_bg"
                android:layout_below="@id/tv_rememberpwd1"
                >
            </Button>
            
        </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_code"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_280">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_phone"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@drawable/et_login_bg"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_height="@dimen/dp_50">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:src="@mipmap/user">
                    </ImageView>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/et_username_code"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:background="@null"
                        android:paddingLeft="@dimen/dp_6"
                        android:textSize="@dimen/sp_15"
                        android:textColorHint="#999999"
                        android:layout_height="@dimen/dp_50">
                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="获取验证码"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#FF9957"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_20"
                        android:id="@+id/tv_getcode"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_code"
                    android:layout_below="@id/ll_phone"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_18"
                    android:background="@drawable/et_login_bg"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_height="@dimen/dp_50">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:src="@mipmap/code">
                    </ImageView>
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/et_code"
                        android:hint="请输入验证码"
                        android:textSize="@dimen/sp_15"
                        android:inputType="phone"
                        android:paddingLeft="@dimen/dp_6"
                        android:textColorHint="#999999"
                        android:background="@null"
                        android:layout_height="@dimen/dp_50">
                    </EditText>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="忘记密码？"
                    android:textColor="#43C4AB"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/ll_code"
                    android:id="@+id/tv_rememberpwd2"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_28"
                    android:layout_height="wrap_content">
                </TextView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:text="登录"
                    android:layout_marginRight="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_31"
                    android:id="@+id/bt_login_code"
                    android:background="@drawable/address_button_bg"
                    android:layout_below="@id/tv_rememberpwd2"
                    >
                </Button>
            </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>