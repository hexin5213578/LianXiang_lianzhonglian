<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl1"
        android:background="@color/activity_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/arrow_left"
            android:layout_alignParentBottom="true"
            android:id="@+id/back"
            android:layout_height="@dimen/dp_20">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/title"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="添加收货地址"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:background="@mipmap/activity_bg"
        android:layout_below="@id/rl1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dp_63"
                        android:layout_marginRight="@dimen/dp_63"
                        android:layout_marginTop="@dimen/dp_300"
                        android:id="@+id/rc_coupon_get"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/l1"
                        android:layout_marginTop="@dimen/dp_34"
                        android:gravity="center"
                        android:layout_below="@id/rc_coupon_get"
                        android:layout_height="@dimen/dp_15">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@mipmap/activity_right"
                            android:layout_height="@dimen/dp_6">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="活动规则"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/rc_coupon_get"
                            android:layout_height="match_parent">
                        </TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@mipmap/activity_left"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/rc_coupon_get"
                            android:layout_height="@dimen/dp_6">
                        </ImageView>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="@dimen/dp_280"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/l1"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_height="@dimen/dp_247">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</RelativeLayout>