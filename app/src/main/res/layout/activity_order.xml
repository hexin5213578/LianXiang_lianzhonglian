<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:background="@color/title"
                android:layout_height="@dimen/dp_50">
                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/back"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_left"
                    android:layout_height="@dimen/dp_25">
                </ImageView>
                <EditText
                    android:background="@drawable/search_bg"
                    android:layout_toRightOf="@id/back"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:paddingLeft="@dimen/dp_34"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/sp_13"
                    android:id="@+id/et_search"
                    android:paddingTop="@dimen/dp_1"
                    android:layout_centerVertical="true"
                    android:hint="搜索我的订单"
                    android:layout_width="@dimen/dp_282"
                    android:layout_height="@dimen/dp_30">
                </EditText>
                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_48"
                    android:src="@mipmap/search">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/tv_search"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/et_search"
                    android:text="搜索">
                </TextView>
            </RelativeLayout>
            <com.google.android.material.tabs.TabLayout
                android:layout_below="@id/rl_title"
                android:background="@color/title"
                android:id="@+id/tab"
                app:tabTextColor="@color/white"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorFullWidth="false"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42">
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_below="@id/tab"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/vp"
                android:layout_height="match_parent">
            </androidx.viewpager.widget.ViewPager>
    <com.liaoinstan.springview.widget.SpringView
        android:layout_width="match_parent"
        android:id="@+id/sv"
        android:visibility="gone"
        android:layout_below="@id/rl_title"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/sc_search"
            android:layout_width="match_parent"
            android:layout_below="@id/rl_title"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/rc_bg"
                    android:id="@+id/rc_search_order"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/dialog_bg"
                    android:id="@+id/rl_noorder"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@mipmap/noorder"
                        android:layout_height="match_parent">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="暂无订单，快去逛逛吧~"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_13"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_240"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_hotsell"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20">
                    <ImageView
                        android:layout_width="@dimen/dp_52"
                        android:src="@mipmap/order1"
                        android:layout_marginTop="@dimen/dp_1"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/dp_2">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="附近热销商品"
                        android:textColor="#E94942"
                        android:textSize="15sp"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/dp_52"
                        android:layout_marginTop="@dimen/dp_1"
                        android:src="@mipmap/order2"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/dp_2">
                    </ImageView>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:background="@drawable/rc_bg"
                    android:id="@+id/rc_hotSell"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>

</RelativeLayout>