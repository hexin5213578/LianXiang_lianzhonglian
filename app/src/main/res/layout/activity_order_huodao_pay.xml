<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F6F6F6"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/title"
        android:id="@+id/include"></include>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/include"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@mipmap/order_shipped"
                        android:scaleType="centerCrop"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="确认收货后付款"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_55"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/confirmorder_bg"
                    android:id="@+id/rl_select_address"
                    android:layout_below="@id/rl1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="@dimen/dp_73">
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:src="@mipmap/order_address"
                        android:id="@+id/iv_haveaddress"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_height="@dimen/dp_22">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#333333"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_38"
                        android:textSize="@dimen/sp_14"
                        android:id="@+id/tv_name"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/tv_name"
                        android:layout_marginTop="@dimen/dp_17"
                        android:textSize="@dimen/sp_12"
                        android:id="@+id/tv_phone"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_marginLeft="@dimen/dp_38"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="#333333"
                        android:id="@+id/tv_address"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/rl_select_address"
                    android:layout_width="match_parent"
                    android:background="@drawable/confirmorder_bg"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:id="@+id/rc_order_list"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/confirmorder_bg"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_below="@id/rc_order_list"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="订单信息"
                        android:textSize="@dimen/sp_14"
                        android:id="@+id/tv1"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textColor="#333333"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="订单编号："
                        android:layout_below="@id/tv1"
                        android:textColor="#333333"
                        android:id="@+id/tv2"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="XXXXXXXXXXXX"
                        android:id="@+id/tv_order_number"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_toRightOf="@id/tv2"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_below="@id/tv1"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="付款方式："
                        android:layout_below="@id/tv2"
                        android:textColor="#333333"
                        android:id="@+id/tv3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="微信支付"
                        android:id="@+id/tv_theway"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_toRightOf="@id/tv3"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_below="@id/tv2"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="创建时间："
                        android:layout_below="@id/tv3"
                        android:textColor="#333333"
                        android:id="@+id/tv4"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2020-08-02 14:20:43"
                        android:textColor="#333333"
                        android:id="@+id/tv_time1"
                        android:textSize="@dimen/sp_12"
                        android:layout_toRightOf="@id/tv4"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_below="@id/tv3"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="收  款  方："
                        android:layout_below="@id/tv4"
                        android:textColor="#333333"
                        android:id="@+id/tv6"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="链众店"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_toRightOf="@id/tv6"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_below="@id/tv4"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Button
                        android:layout_width="@dimen/dp_100"
                        android:text="已收货(付款)"
                        android:layout_below="@id/tv6"
                        android:textSize="@dimen/sp_14"
                        android:background="@drawable/waitpay_bt_bg"
                        android:textColor="#FFA36A"
                        android:id="@+id/bt_pay"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_21"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:layout_height="@dimen/dp_30">
                    </Button>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>