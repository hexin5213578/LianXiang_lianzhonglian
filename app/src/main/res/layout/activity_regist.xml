<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".regist.activity.RegistActivity">

     <include layout="@layout/title"
         android:id="@+id/include">
     </include>
     <androidx.core.widget.NestedScrollView
         android:layout_width="match_parent"
         android:layout_below="@+id/include"
         android:layout_height="match_parent">
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_56"
                   android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:id="@+id/et_username"
                        android:background="@null"
                        android:hint="请输入店铺名称"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#999999"
                        android:layout_height="match_parent">
                    </EditText>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:background="#EFEFEF"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginRight="@dimen/dp_15"
                   android:layout_height="@dimen/dp_0_5">

               </View>
               <LinearLayout
                   android:id="@+id/l4"
                   android:layout_below="@id/v3"
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="@dimen/dp_50">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:id="@+id/et_address"
                        android:background="@null"
                        android:hint="请输入店铺地址"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#999999"
                        android:layout_height="match_parent">
                    </EditText>
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="@dimen/dp_70"
                        android:id="@+id/rl_location"
                        android:layout_height="match_parent">
                         <ImageView
                             android:layout_width="@dimen/dp_15"
                             android:src="@mipmap/arrow_right"
                             android:layout_alignParentRight="true"
                             android:layout_centerVertical="true"
                             android:layout_marginRight="@dimen/dp_15"
                             android:layout_height="@dimen/dp_16">
                         </ImageView>
                    </RelativeLayout>
               </LinearLayout>
                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:orientation="horizontal">
                         <EditText
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:id="@+id/et_phone"
                             android:paddingLeft="@dimen/dp_10"
                             android:background="@null"
                             android:inputType="phone"
                             android:hint="请输入手机号"
                             android:textSize="@dimen/sp_15"
                             android:textColor="#999999"
                             android:layout_height="match_parent">
                         </EditText>

                         <Button
                             android:id="@+id/bt_getcode"
                             android:layout_width="@dimen/dp_85"
                             android:layout_height="@dimen/dp_35"
                             android:layout_gravity="center"
                             android:layout_marginRight="@dimen/dp_15"
                             android:background="@drawable/getcode_bg"
                             android:text="获取验证码"
                             android:textColor="#FF9957"
                             android:textSize="@dimen/sp_12"></Button>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="#EFEFEF"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_height="@dimen/dp_0_5">
                    </View>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_56"
                   android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:id="@+id/et_code"
                        android:background="@null"
                        android:inputType="phone"
                        android:hint="请输入验证码"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#999999"
                        android:layout_height="match_parent">
                    </EditText>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:background="#EFEFEF"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginRight="@dimen/dp_15"
                   android:layout_height="@dimen/dp_0_5">

               </View>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_56"
                   android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:background="@null"
                        android:id="@+id/et_pwd1"
                        android:inputType="textPassword"
                        android:hint="请输入6-20位登录密码"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#999999"
                        android:layout_height="match_parent">
                    </EditText>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:background="#EFEFEF"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginRight="@dimen/dp_15"
                   android:layout_height="@dimen/dp_0_5">

               </View>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_56"
                   android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:id="@+id/et_pwd2"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:hint="再次输入密码"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#999999"
                        android:layout_height="match_parent">
                    </EditText>
               </LinearLayout>
               <RelativeLayout
                   android:id="@+id/rl_mentou"
                   android:layout_width="match_parent"
                   android:layout_marginTop="@dimen/dp_20"
                   android:layout_height="@dimen/dp_250"
                   android:background="@drawable/regist_photo_bg"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/iv_mentou"
                        android:layout_height="match_parent">
                    </ImageView>

                    <ImageView
                        android:id="@+id/iv_camera1"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_36"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_95"
                        android:src="@mipmap/camera"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="店铺门头照"
                        android:id="@+id/tv_mentou"
                        android:layout_below="@id/iv_camera1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/title"
                        android:layout_height="wrap_content">
                    </TextView>
               </RelativeLayout>
               <RelativeLayout
                   android:id="@+id/rl_yingye"
                   android:layout_width="match_parent"
                   android:layout_marginTop="@dimen/dp_18"
                   android:layout_height="@dimen/dp_250"
                   android:background="@drawable/regist_photo_bg"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/iv_yingye"
                        android:layout_height="match_parent">
                    </ImageView>
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_36"
                        android:id="@+id/iv_camera2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_95"
                        android:src="@mipmap/camera">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="店铺营业执照"
                        android:layout_below="@id/iv_camera2"
                        android:id="@+id/tv_yingye"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/title"
                        android:layout_height="wrap_content">
                    </TextView>
               </RelativeLayout>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_50"
                   android:text="提交"
                   android:id="@+id/bt_regist"
                   android:layout_marginTop="@dimen/dp_24"
                   android:layout_marginRight="@dimen/dp_30"
                   android:layout_marginBottom="@dimen/dp_24"
                   android:layout_marginLeft="@dimen/dp_30"
                   android:background="@drawable/address_button_bg">
               </Button>
               
               </LinearLayout>

     </androidx.core.widget.NestedScrollView>
</RelativeLayout>