<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".search.activity.SearchActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="@color/title"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left"
            android:layout_height="@dimen/dp_25">
        </ImageView>
        <EditText
            android:background="@drawable/search_bg"
            android:layout_toRightOf="@id/back"
            android:layout_marginLeft="@dimen/dp_13"
            android:paddingLeft="@dimen/dp_34"
            android:textColorHint="@color/white"
            android:textSize="@dimen/sp_13"
            android:id="@+id/et_search"
            android:paddingTop="@dimen/dp_1"
            android:layout_centerVertical="true"
            android:hint="请输入商品名称"
            android:layout_width="@dimen/dp_282"
            android:layout_height="@dimen/dp_30">
        </EditText>
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_48"
            android:src="@mipmap/search">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_search"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/et_search"
            android:text="搜索">
        </TextView>
    </RelativeLayout>
    <com.liaoinstan.springview.widget.SpringView
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_title"
        android:id="@+id/sv"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rc_search_goods"
            android:background="@color/white"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </com.liaoinstan.springview.widget.SpringView>
    <RelativeLayout
        android:id="@+id/rl_history"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_title"
        android:layout_height="match_parent">
        <View
            android:layout_width="@dimen/dp_5"
            android:background="@color/title"
            android:id="@+id/v1"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_15">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史搜索"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/v1"
            android:layout_marginTop="@dimen/dp_23"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            >
        </TextView>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_23"
            android:src="@mipmap/delete"
            android:id="@+id/delete"
            android:layout_height="@dimen/dp_14">
        </ImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_below="@id/v1"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/rc_search_history"
            android:layout_marginRight="@dimen/dp_49"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="@dimen/dp_5"
            android:background="@color/title"
            android:id="@+id/v2"
            android:layout_below="@id/rc_search_history"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_15">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/v1"
            android:layout_below="@id/rc_search_history"
            android:layout_marginTop="@dimen/dp_23"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            >
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/rc_search_hot"
            android:layout_below="@id/v2"
            android:layout_marginRight="@dimen/dp_49"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>