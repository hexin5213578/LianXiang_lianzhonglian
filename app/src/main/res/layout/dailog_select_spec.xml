<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/dp_135"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/camera"
            android:id="@+id/iv_touxiang"
            android:layout_height="@dimen/dp_135">
        </ImageView>
        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="171dp"
                    android:text="农夫山泉引用天然水550ml整箱装"
                    android:layout_marginLeft="@dimen/dp_155"
                    android:textColor="#333333"
                    android:id="@+id/tv_name"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_close"
                    android:layout_height="@dimen/dp_14"
                    android:layout_toRightOf="@id/tv_name"
                    android:src="@mipmap/close">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="规格"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:id="@+id/guige"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_135"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="550ml*24瓶【整箱】"
                    android:layout_below="@id/guige"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_13"
                    android:id="@+id/tv_guige"
                    android:layout_marginTop="@dimen/dp_27"
                    android:layout_marginLeft="@dimen/dp_10">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="￥32.90"
                    android:textSize="12sp"
                    android:textColor="#E94942"
                    android:id="@+id/tv_price"
                    android:layout_below="@id/tv_guige"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_below="@id/guige"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_width="@dimen/dp_72"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:background="@drawable/ll_bg"
                    android:layout_height="@dimen/dp_24">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/iv_jian"
                            android:layout_weight="1">
                                <ImageView
                                    android:layout_width="@dimen/dp_7"
                                    android:layout_height="@dimen/dp_7"
                                    android:src="@mipmap/jian">
                                </ImageView>
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/dp_1"
                            android:background="#eeeeee"
                            android:layout_height="match_parent">
                        </View>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                                android:layout_weight="1"
                            android:text="1"
                            android:id="@+id/tv_count_change"
                            android:gravity="center">
                        </TextView>
                        <View
                            android:layout_width="@dimen/dp_1"
                            android:background="#eeeeee"
                            android:layout_height="match_parent">
                        </View>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/iv_jia"
                            android:layout_weight="1">
                                <ImageView
                                    android:layout_width="@dimen/dp_7"
                                    android:layout_height="@dimen/dp_7"
                                    android:src="@mipmap/jia">
                                </ImageView>
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_select_guige"
                    android:layout_below="@id/tv_price"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="@dimen/dp_28">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="配送方式"
                            android:gravity="center"
                            android:textSize="@dimen/sp_13"
                            android:textColor="#999999"
                            android:layout_height="match_parent">
                        </TextView>
                        <RadioGroup
                            android:orientation="horizontal"
                            android:id="@+id/rg_peisong"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                                <RadioButton
                                    android:layout_width="@dimen/dp_70"
                                    android:text="本地发货"
                                    android:id="@+id/rb1"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:button="@null"
                                    android:checked="true"
                                    android:background="@drawable/guige_rb_bg"
                                    android:textSize="@dimen/sp_13"
                                    android:layout_height="@dimen/dp_28">
                                </RadioButton>
                                <RadioButton
                                    android:text="链象发货"
                                    android:layout_marginLeft="@dimen/dp_6"
                                    android:id="@+id/rb2"
                                    android:gravity="center"
                                    android:button="@null"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_13"
                                    android:background="@drawable/guige_rb_bg"
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="@dimen/dp_28">
                                </RadioButton>
                        </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/ll_select_guige"
                    android:layout_marginTop="@dimen/dp_47"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/ll_price"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/dp_14">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="共"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_12"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#E94942"
                            android:textSize="@dimen/sp_12"
                            android:id="@+id/tv_count"
                            android:text="0"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="箱"
                            android:textColor="#808080"
                            android:textSize="@dimen/sp_12"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_allprice"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="#E94942"
                            android:text="¥0.00"
                            android:textSize="@dimen/sp_12">
                        </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/ll_price"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_height="@dimen/dp_46">
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="加入进货单"
                            android:id="@+id/bt_join"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:background="#E94942"
                            android:layout_height="match_parent">
                        </Button>
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="立即订购"
                            android:id="@+id/bt_buy"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:background="#43C6AD"
                            android:layout_height="match_parent">
                        </Button>
                </LinearLayout>
        </RelativeLayout>
</RelativeLayout>