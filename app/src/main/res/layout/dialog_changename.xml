<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/rc_bg"
        android:layout_width="@dimen/dp_260"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/dp_205">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:src="@mipmap/close"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_close"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_height="@dimen/dp_15">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="修改昵称"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_height="wrap_content">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:background="#EFEFEF"
            android:id="@+id/v1"
            android:layout_marginTop="@dimen/dp_63"
            android:layout_height="@dimen/dp_1">
        </View>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_below="@id/v1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="何梦洋"
                android:paddingLeft="@dimen/dp_20"
                android:textColor="#9A9898"
                android:id="@+id/et_name"
                android:textSize="@dimen/sp_14"
                android:background="@null"
                android:layout_height="match_parent">
            </EditText>
            <ImageView
                android:layout_width="@dimen/dp_19"
                android:layout_gravity="center"
                android:src="@mipmap/qingchu"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/iv_qingchu"
                android:layout_height="@dimen/dp_19">
            </ImageView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#EFEFEF"
            android:id="@+id/v2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@id/ll"
            android:layout_height="@dimen/dp_1">
        </View>
        <Button
            android:layout_width="@dimen/dp_154"
            android:text="保存"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:id="@+id/bt_save"
            android:layout_centerHorizontal="true"
            android:background="@drawable/address_button_bg"
            android:layout_below="@id/v2"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_height="@dimen/dp_44">
        </Button>
    </RelativeLayout>
</RelativeLayout>