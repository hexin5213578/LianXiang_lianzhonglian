<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:src="@mipmap/close"
            android:id="@+id/iv_close"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_16">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="付款详情"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#E8E8E8"
        android:id="@+id/v1"
        android:layout_below="@id/rl1"
        android:layout_height="@dimen/dp_1">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl2"
        android:layout_below="@id/v1"
        android:layout_height="@dimen/dp_54">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:src="@mipmap/pay_wechat"
            android:id="@+id/pay_wechat"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_16">
        </ImageView>
        <RadioButton
            android:layout_width="wrap_content"
            android:text="微信支付"
            android:checked="true"
            android:id="@+id/rb1"
            android:layout_toRightOf="@id/pay_wechat"
            android:layout_centerVertical="true"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="wrap_content">
        </RadioButton>
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:src="@mipmap/pay_checked"
            android:id="@+id/pay_check1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_16">
        </ImageView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#E8E8E8"
        android:id="@+id/v2"
        android:layout_below="@id/rl2"
        android:layout_height="@dimen/dp_1">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl3"
        android:layout_below="@id/v2"
        android:layout_height="@dimen/dp_54">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:src="@mipmap/pay_alipay"
            android:id="@+id/pay_alipay"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_16">
        </ImageView>
        <RadioButton
            android:layout_width="wrap_content"
            android:text="支付宝支付"
            android:id="@+id/rb2"
            android:layout_toRightOf="@id/pay_alipay"
            android:layout_centerVertical="true"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="wrap_content">
        </RadioButton>
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:src="@mipmap/pay_checked"
            android:id="@+id/pay_check2"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_16">
        </ImageView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#E8E8E8"
        android:id="@+id/v3"
        android:layout_below="@id/rl3"
        android:layout_height="@dimen/dp_1">
    </View>
    <RelativeLayout
        android:layout_below="@id/v3"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_marginLeft="@dimen/dp_135"
            android:layout_width="wrap_content"
            android:text="实付款:"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:id="@+id/shi"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="￥1280.00"
            android:layout_toRightOf="@id/shi"
            android:textSize="@dimen/sp_14"
            android:textColor="#E94942"
            android:id="@+id/tv_price"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        </TextView>
<Button
    android:layout_width="@dimen/dp_96"
    android:text="立即支付"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:id="@+id/startpay"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/address_button_bg"
    android:layout_height="@dimen/dp_40">
</Button>
    </RelativeLayout>
</RelativeLayout>