<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_112">
        <ImageView
            android:layout_width="@dimen/dp_69"
            android:id="@+id/iv_goods_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_69">
        </ImageView>
        <TextView
            android:layout_width="@dimen/dp_160"
            android:layout_toRightOf="@id/iv_goods_image"
            android:textSize="@dimen/sp_14"
            android:text="青岛啤酒经典8度"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="#333333"
            android:id="@+id/tv_goods_name"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="规格：500ml*12瓶/箱"
            android:layout_toRightOf="@id/iv_goods_image"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginLeft="@dimen/dp_8"
            android:id="@+id/tv_goods_spec"
            android:textColor="#999999"
            android:layout_marginTop="@dimen/dp_7"
            android:textSize="@dimen/sp_11"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="发货时间 付款后 3天内发货"
            android:textColor="#FF9957"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_8"
            android:id="@+id/tv"
            android:layout_below="@id/tv_goods_spec"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toRightOf="@id/iv_goods_image"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="￥54.00"
            android:layout_below="@id/tv"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="#333333"
            android:id="@+id/tv_price"
            android:layout_toLeftOf="@id/tv_goods_count"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_goods_count"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_below="@id/tv"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            android:text="x10"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

</RelativeLayout>